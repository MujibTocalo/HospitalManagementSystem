    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        grayLight: 'rgba(193, 193, 193, 0.03)',
                        customBlue: '#00095F',
                        customGray: '#C1C1C1',
                        customOrange: '#EA8222',
                        customViolet: 'rgba(224,210,255,1)',
                        customGreen: 'rgba(195,240,235)',
